{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "ES2017",
		"module": "esnext",
		"moduleResolution": "node",
		"removeComments": false,
		"sourceMap": true,
		"noImplicitAny": true,
		"outDir": "./dist/tsc",
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./dts/",
		"esModuleInterop": false, 
		"allowSyntheticDefaultImports": true,
	},
	"exclude": [
		"node_modules",
		"dist",
		"bower_components"
	],
	"compileOnSave": false,
	"baseUrl": "."
}
